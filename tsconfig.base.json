{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-angular-icons/nx-plugin": ["tools/nx-plugin/src/index.ts"],
      "@nx-angular-icons/shared-tool-icon-generator": [
        "libs/shared/tool-icon-generator/src/index.ts"
      ],
      "@nx-angular-icons/shared-ui-icons": ["libs/shared/ui-icons/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
